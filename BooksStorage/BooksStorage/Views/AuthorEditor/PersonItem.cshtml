@model BooksStorage.ViewModels.PersonViewModel
@{
    Layout = null;
}

<div class="form-group">
    @Html.LabelFor(m => m.Family, new { @class = "" })
    @Html.TextBoxFor(m => m.Family, new { @class = "form-control", placeholder = "Фамилия ..." })
    @Html.ValidationMessageFor(m => m.Family)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "" })
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Имя ..." })
    @Html.ValidationMessageFor(m => m.Name)
</div>
@Html.HiddenFor(m => m.PersonId)
